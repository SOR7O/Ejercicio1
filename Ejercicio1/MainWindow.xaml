<Window x:Class="Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Name="Xa1" Content="Coordenada X1" Margin="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Width="100" Margin="1" Text="{Binding Path=CoordenadaX1,Mode=TwoWay}" />
        <Label Name="Xa2" Margin="1" Content="Coordenada X2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Width="100" Margin="1" Text="{Binding Path=CoordenadaX2,Mode=TwoWay}"/>
        <Label Name="Ya1" Content="Coordenada Y1" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Width="100" Margin="1" Text="{Binding Path=CoordenadaY1,Mode=TwoWay}"/>
        <Label Name="Ya2" Content="Coordenada Y2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox  Width="100" Margin="1" Text="{Binding Path=CoordenadaY2,Mode=TwoWay}"/>
        <Label Name="Resultado" Content="RESULTADO" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Width="200" Text="{Binding Path=Resultado,Mode=TwoWay}"/>
    </StackPanel>
</Window>
